<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <data>
        <variable
            name="track"
            type="com.example.audiomusicapp.models.Track" />
        <variable
            name="listener"
            type="com.example.audiomusicapp.adapters.MusicItemClickListener" />
        <variable
            name="musicViewModel"
            type="com.example.audiomusicapp.ui.hiphop.HipHopViewModel" />
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_rapper"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="18dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/em_music"
            imageFromUrl="@{track.artistPic}"
            android:visibility="visible" />

    </androidx.cardview.widget.CardView>


    <ImageButton
        android:id="@+id/iv_2pac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/cv_rapper"
        android:onClick="@{() -> listener.onPlayClick()}"
        app:layout_constraintEnd_toEndOf="@+id/cv_rapper"
        app:layout_constraintStart_toStartOf="@+id/cv_rapper"
        app:layout_constraintTop_toTopOf="@+id/cv_rapper"
        app:srcCompat="@drawable/ic_play_music" />


    <TextView
        android:id="@+id/txt_eminem"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_border"
        android:backgroundTint="#61969c"
        android:elevation="9dp"
        android:padding="10dp"
        android:text="@{track.artistName}"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cv_rapper"
        app:layout_constraintEnd_toEndOf="@+id/cv_rapper"
        app:layout_constraintStart_toStartOf="@+id/cv_rapper" />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>