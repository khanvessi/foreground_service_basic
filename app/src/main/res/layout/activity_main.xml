<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0b0b27"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/iv_eminem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_eminem"
        app:layout_constraintEnd_toEndOf="@+id/cv_eminem"
        app:layout_constraintStart_toStartOf="@+id/cv_eminem"
        app:layout_constraintTop_toTopOf="@+id/cv_eminem"
        app:srcCompat="@drawable/ic_play_music" />

    <ImageButton
        android:id="@+id/iv_drake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/cv_drake"
        app:layout_constraintEnd_toEndOf="@+id/cv_drake"
        app:layout_constraintStart_toStartOf="@+id/cv_drake"
        app:layout_constraintTop_toTopOf="@+id/cv_drake"
        app:srcCompat="@drawable/ic_play_music" />

    <ImageButton
        android:id="@+id/iv_nf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="157dp"
        android:layout_marginEnd="148dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_nf"
        app:layout_constraintEnd_toEndOf="@+id/cv_nf"
        app:layout_constraintStart_toEndOf="@+id/cv_nf"
        app:layout_constraintStart_toStartOf="@+id/cv_nf"
        app:layout_constraintTop_toTopOf="@+id/cv_nf"
        app:srcCompat="@drawable/ic_play_music" />

    <ImageButton
        android:id="@+id/iv_2pac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/cv_2pac"
        app:layout_constraintEnd_toEndOf="@+id/cv_2pac"
        app:layout_constraintStart_toStartOf="@+id/cv_2pac"
        app:layout_constraintTop_toTopOf="@+id/cv_2pac"
        app:srcCompat="@drawable/ic_play_music" />

    <TextView
        android:id="@+id/txt_eminem"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_border"
        android:backgroundTint="#61969c"
        android:elevation="9dp"
        android:padding="10dp"
        android:text="Eminem"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cv_eminem"
        app:layout_constraintEnd_toEndOf="@+id/cv_eminem"
        app:layout_constraintStart_toStartOf="@+id/cv_eminem" />

    <TextView
        android:id="@+id/txt_nf"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_border"
        android:backgroundTint="#315165"
        android:elevation="9dp"
        android:padding="10dp"
        android:text="NF"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cv_nf"
        app:layout_constraintEnd_toEndOf="@+id/cv_nf"
        app:layout_constraintStart_toStartOf="@+id/cv_nf" />

    <TextView
        android:id="@+id/txt_2pac"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_border"
        android:backgroundTint="#302c1c"
        android:elevation="9dp"
        android:padding="10dp"
        android:text="2PAC"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cv_2pac"
        app:layout_constraintEnd_toEndOf="@+id/cv_2pac"
        app:layout_constraintStart_toStartOf="@+id/cv_2pac" />


    <TextView
        android:id="@+id/txt_drake"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_border"
        android:backgroundTint="#688042"
        android:elevation="9dp"
        android:padding="10dp"
        android:text="Drake"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cv_drake"
        app:layout_constraintEnd_toEndOf="@+id/cv_drake"
        app:layout_constraintStart_toStartOf="@+id/cv_drake" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Discover"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:text="“Life is one grand, sweet song so start the music.”"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:backgroundTint="#1d1b49"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/cardView2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_border"
            android:backgroundTint="#312f69"
            android:padding="9dp"
            android:src="@drawable/ic_hiphop" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="#1d1b49"
        android:backgroundTint="#1d1b49"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_border"
            android:backgroundTint="#312f69"
            android:padding="9dp"
            android:src="@drawable/ic_pop" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="#1d1b49"
        android:backgroundTint="#1d1b49"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/cardView3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_border"
            android:backgroundTint="#312f69"
            android:padding="9dp"
            android:src="@drawable/ic_rock" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:elevation="8dp"
        android:text="Rock"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="@+id/cardView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:elevation="8dp"
        android:text="HipHop"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/cardView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:elevation="8dp"
        android:text="Pop"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="@+id/cardView3"
        app:layout_constraintStart_toStartOf="@+id/cardView3"
        app:layout_constraintTop_toTopOf="@+id/cardView3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="133dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="153dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    //EMINEM-->


    <!--    2PAC-->

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_eminem"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/cv_nf"
        app:layout_constraintEnd_toStartOf="@+id/cv_drake"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/cv_nf"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.22000003"
        app:layout_constraintVertical_chainStyle="packed">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/em_music"
            android:visibility="visible" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_2pac"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cv_nf"
        app:layout_constraintTop_toBottomOf="@+id/cv_drake">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/twopac"
            android:scaleType="centerCrop"
            android:visibility="visible" />

    </androidx.cardview.widget.CardView>

    <!--    NF-->

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_nf"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cv_2pac"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/cv_eminem">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/jf_music"
            android:visibility="visible" />

    </androidx.cardview.widget.CardView>


    <!--    DRAKK-->

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_drake"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/cv_2pac"
        app:layout_constraintEnd_toStartOf="@+id/txt_drake"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cv_eminem"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"
        app:layout_constraintVertical_bias="0.22000003"
        app:layout_constraintVertical_chainStyle="packed">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/drake_music"
            android:visibility="visible" />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="5dp" />


</androidx.constraintlayout.widget.ConstraintLayout>